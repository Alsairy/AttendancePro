{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=sql-server,1433;Database=Hudur;User Id=sa;Password=${DB_PASSWORD};TrustServerCertificate=true;",
    "Redis": "redis:6379"
  },
  "JWT": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "Hudur",
    "Audience": "HudurUsers",
    "ExpiryInMinutes": 60
  }
}

